{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "target": "ESNext",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@samatech/image-api": ["@samatech/image-api/lib/src"],
      "@samatech/image-api-types": ["@samatech/image-api/types/src"],
      "@samatech/image-server": ["@samatech/image-api/server/src"]
    }
  }
}

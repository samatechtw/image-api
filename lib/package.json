    "@types/sharp": "^0.31.0",
    "@types/svgo": "^2.6.4",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.1.2",
    "prettier": "^2.3.2",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "lodash": "^4.17.21",
